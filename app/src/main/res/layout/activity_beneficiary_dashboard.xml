<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:title="Beneficiary Dashboard"
            app:titleTextColor="@color/black"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Project Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProjectStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Track your house construction progress"
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMyProjectStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Project Status"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_construction"
                        app:iconGravity="start"
                        app:cornerRadius="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Fund Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFundDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fund Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check fund disbursement status"
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFundDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Fund Details"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_payment"
                        app:iconGravity="start"
                        app:cornerRadius="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Deadlines Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDeadlines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Project Deadlines"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View important project milestones"
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeadlines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Deadlines"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_calendar"
                        app:iconGravity="start"
                        app:cornerRadius="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Feedback Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share your feedback or report issues"
                        android:textColor="@color/material_on_surface_emphasis_medium"
                        android:layout_marginBottom="16dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit Feedback"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_feedback"
                        app:iconGravity="start"
                        app:cornerRadius="8dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
